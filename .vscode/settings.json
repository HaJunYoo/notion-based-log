{
    // TypeScript 설정
    "typescript.preferences.importModuleSpecifier": "relative",
    "typescript.suggest.autoImports": true,
    "typescript.updateImportsOnFileMove.enabled": "always",
    "typescript.preferences.includePackageJsonAutoImports": "auto",
  
    // 파일 확장자 설정
    "files.associations": {
      "*.css": "css",
      "*.scss": "scss",
      "*.sass": "sass",
      "*.less": "less",
      "*.json": "json",
      "*.md": "markdown",
      "*.mdx": "markdown",
      "*.yml": "yaml",
      "*.yaml": "yaml"
    },
  
    // 에디터 설정
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit",
      "source.organizeImports": "explicit"
    },
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    "editor.rulers": [80, 100],
    "editor.wordWrap": "on",
    "editor.minimap.enabled": false,
  
    // 파일 설정
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.exclude": {
      "**/.git": true,
      "**/.DS_Store": true,
      "**/node_modules": true,
      "**/.next": true,
      "**/out": true,
      "**/dist": true,
      "**/build": true,
      "**/.cache": true,
      "**/coverage": true,
      "**/.env.local": true,
      "**/.env.development.local": true,
      "**/.env.test.local": true,
      "**/.env.production.local": true
    },
  
    // 검색 설정
    "search.exclude": {
      "**/node_modules": true,
      "**/.next": true,
      "**/out": true,
      "**/dist": true,
      "**/build": true,
      "**/.cache": true,
      "**/coverage": true,
      "**/yarn.lock": true,
      "**/package-lock.json": true
    },
  
    // ESLint 설정
    "eslint.validate": [
      "javascript",
      "javascriptreact",
      "typescript",
      "typescriptreact"
    ],
    "eslint.workingDirectories": ["."],
    "eslint.format.enable": true,
  
    // Prettier 설정
    "prettier.requireConfig": true,
    "prettier.useEditorConfig": false,
  
    // Emotion 설정
    "emotion.include": [
      "src/**/*.{ts,tsx}",
      "pages/**/*.{ts,tsx}"
    ],
    "emotion.exclude": [
      "node_modules/**/*",
      ".next/**/*",
      "out/**/*"
    ],
  
    // Next.js 설정
    "nextjs.navigation.autoSwitch": true,
    "nextjs.suggestions.includeParamsWithPrefix": ["@", "~"],
  
    // Git 설정
    "git.enableSmartCommit": true,
    "git.confirmSync": false,
    "git.autofetch": true,
    "git.autofetchPeriod": 180,
  
    // 터미널 설정
    "terminal.integrated.defaultProfile.osx": "zsh",
    "terminal.integrated.defaultProfile.linux": "bash",
    "terminal.integrated.defaultProfile.windows": "PowerShell",
    "terminal.integrated.env.osx": {
      "PATH": "/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin"
    },
  
    // 디버깅 설정
    "debug.allowBreakpointsEverywhere": true,
  
    // 확장 프로그램 권장 설정
    "extensions.ignoreRecommendations": false,
  
    // 워크스페이스 설정
    "workbench.colorTheme": "Default Dark+",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.startupEditor": "newUntitledFile",
  
    // 자동 저장 설정
    "files.autoSave": "onFocusChange",
  
    // 줄 번호 설정
    "editor.lineNumbers": "on",
  
    // 브래킷 페어 컬러링
    "editor.bracketPairColorization.enabled": true,
    "editor.guides.bracketPairs": true,
  
    // 스니펫 설정
    "editor.snippetSuggestions": "top",
  
    // 자동 완성 설정
    "editor.quickSuggestions": {
      "other": true,
      "comments": false,
      "strings": true
    },
  
    // 커서 설정
    "editor.cursorBlinking": "smooth",
    "editor.cursorSmoothCaretAnimation": "on",
  
    // 선택 설정
    "editor.multiCursorModifier": "alt",
  
    // 스크롤 설정
    "editor.smoothScrolling": true,
  
    // 폰트 설정 (선택적 - 팀원들이 동일한 폰트를 사용한다면)
    "editor.fontFamily": "'JetBrains Mono', 'Fira Code', 'Consolas', 'Monaco', 'Courier New', monospace",
    "editor.fontSize": 14,
    "editor.fontLigatures": true,
  
    // 줄 간격 설정
    "editor.lineHeight": 1.5,
  
    // 탭 설정
    "workbench.editor.enablePreview": false,
    "workbench.editor.enablePreviewFromQuickOpen": false,
  
    // 파일 탐색기 설정
    "explorer.compactFolders": false,
    "explorer.incrementalNaming": "smart",
  
    // 문제 패널 설정
    "problems.decorations.enabled": true,
  
    // 상태바 설정
    "workbench.statusBar.visible": true,
  
    // 사이드바 설정
    "workbench.sideBar.location": "left",
  
    // 패널 설정
    "workbench.panel.defaultLocation": "bottom",
  
    // 알림 설정
    "notifications.enableTelemetry": false,
  
    // 업데이트 설정
    "update.mode": "manual"
  }